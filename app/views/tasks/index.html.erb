<h2><%= t("tasks.task_list") %></h2>
<%= link_to t("tasks.task_new"), new_task_path %>
<table>
  <thead>
    <tr>
      <td><%= t("tasks.task_title") %></td>
      <td><%= t("tasks.task_description") %></td>
      <td><%= t("tasks.start_time") %></td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |t| %>
    <tr>
      <td><%= link_to(t.title, task_path(t)) %></td>
      <td><%= t.description %></td>
      <td><%= t.created_at %></td>
      <td><%= link_to t("tasks.edit"), edit_task_path(t) %></td>
      <td><%= link_to t("tasks.delete"), task_path(t), method: "delete", data:{ confirm: t("tasks.sure?") } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
